
<div class="w-full px-4 shadow">
    <div class="flex flex-col min-w-0 break-words bg-white w-full mb-8 shadow-lg rounded-lg">
        <div class="px-4 py-10 flex-auto">
            <div class="text-white p-3 text-center inline-flex items-center justify-center w-12 h-12 mb-5 shadow-lg rounded-full bg-blue-400">
                <i class=""></i>
            </div>
            <a href="">
                <h6 class="text-xl font-semibold">{{post.title}}</h6>
            </a>
            <p class="mt-2 mb-4 text-gray-600">
                {{post.body}}
            </p>
        </div>
    </div>
</div>
  {{#each comments as |comment|}}
<div class="w-full px-4 shadow">
    <div class="flex flex-col min-w-0 px-4 py-10 break-words bg-white w-full mb-8 shadow-lg rounded-lg">
        <a href="">
            <h6 class="text-xl font-semibold">{{user.email}} on {{comment.createdAt}}</h6>
        </a>
        <p class="mt-2 mb-4 text-gray-600">{{comment.body}}
        </p>


    </div>
</div>
 {{/each}}

<div class="flex flex-wrap justify-center">
    <div class="w-full lg:w-6/12 px-4">
        <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300">
            <div class="flex-auto p-5 mt-5">
                <div class="relative w-full mb-3">
                </div>
                <div class="relative w-full mb-3">
                    <label class="block uppercase text-gray-700 text-xs font-bold mb-2">Comment</label
                    ><textarea
                      rows="4"
                      cols="80"
                      class="border-0 px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full"
                  id="comment"
                    ></textarea>
                  </div>
                  <div class="text-center mt-6">
                    <button
                      class="bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1"
                      type="button"
                   id="add-comment"
                    >
                      Submit
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

